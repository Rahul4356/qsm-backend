<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Configure Python handler -->
    <handlers>
      <add name="PythonHandler" 
           path="*" 
           verb="*" 
           modules="httpPlatformHandler" 
           resourceType="Unspecified"/>
    </handlers>
    
    <!-- Configure httpPlatform -->
    <httpPlatform processPath="bash" 
                  arguments="startup.sh"
                  stdoutLogEnabled="true"
                  stdoutLogFile="\\?\%home%\LogFiles\python.log"
                  startupTimeLimit="120"
                  startupRetryCount="3">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="%HOME%\site\wwwroot"/>
        <environmentVariable name="AZURE_ENV" value="production"/>
      </environmentVariables>
    </httpPlatform>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff"/>
        <add name="X-Frame-Options" value="DENY"/>
        <add name="X-XSS-Protection" value="1; mode=block"/>
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains"/>
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"/>
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin"/>
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite rules -->
    <rewrite>
      <rules>
        <!-- Redirect HTTP to HTTPS -->
        <rule name="Force HTTPS" stopProcessing="true">
          <match url="(.*)"/>
          <conditions>
            <add input="{HTTPS}" pattern="Off"/>
            <add input="{REQUEST_METHOD}" pattern="^get$|^head$"/>
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}"/>
        </rule>
        
        <!-- API routes -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)"/>
          <action type="Rewrite" url="/{R:0}"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- CORS configuration -->
    <cors enabled="true" failUnlistedOrigins="false">
      <add origin="https://jolly-bay-05893c200.1.azurestaticapps.net" allowed="true">
        <allowHeaders>
          <add value="Content-Type"/>
          <add value="Authorization"/>
        </allowHeaders>
        <allowMethods>
          <add value="GET"/>
          <add value="POST"/>
          <add value="PUT"/>
          <add value="DELETE"/>
          <add value="OPTIONS"/>
        </allowMethods>
      </add>
      <add origin="*" allowed="true">
        <allowHeaders>
          <add value="Content-Type"/>
          <add value="Authorization"/>
        </allowHeaders>
        <allowMethods>
          <add value="GET"/>
          <add value="POST"/>
          <add value="PUT"/>
          <add value="DELETE"/>
          <add value="OPTIONS"/>
        </allowMethods>
      </add>
    </cors>
    
    <!-- WebSocket support -->
    <webSocket enabled="true" pingInterval="00:00:30"/>
    
    <!-- Request limits -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="10485760"/> <!-- 10MB -->
      </requestFiltering>
    </security>
    
    <!-- Response compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true"/>
    
    <!-- Static content -->
    <staticContent>
      <remove fileExtension=".json"/>
      <mimeMap fileExtension=".json" mimeType="application/json"/>
    </staticContent>
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <add key="WEBSITE_NODE_DEFAULT_VERSION" value="16.14.2"/>
    <add key="WEBSITE_RUN_FROM_PACKAGE" value="1"/>
    <add key="SCM_DO_BUILD_DURING_DEPLOYMENT" value="true"/>
  </appSettings>
</configuration>